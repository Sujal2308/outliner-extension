{
  "manifest_version": 3,
  "name": "Outliner AI - Webpage Summarizer",
  "version": "1.0.0",
  "description": "Summarize any webpage content in brief, detailed, or bullet point formats using AI",

  "permissions": ["activeTab", "storage"],

  "host_permissions": ["http://*/*", "https://*/*"],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Summarize Page with AI",
    "default_icon": {
      "16": "chrome-extension-package/icons/outliner.png",
      "32": "chrome-extension-package/icons/outliner.png",
      "48": "chrome-extension-package/icons/outliner.png",
      "128": "chrome-extension-package/icons/outliner.png"
    }
  },

  "background": {
    "service_worker": "background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "chrome-extension-package/icons/outliner.png",
    "32": "chrome-extension-package/icons/outliner.png",
    "48": "chrome-extension-package/icons/outliner.png",
    "128": "chrome-extension-package/icons/outliner.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["utils/*"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
